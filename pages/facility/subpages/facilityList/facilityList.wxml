<!--pages/facility/subpages/facilityList/facilityList.wxml-->
<view class='cm_container flex'>
  <view class='flex searchBar'>
    <view>
      <QrScan></QrScan>
    </view>
    <view class='f1'>
      <van-search value="{{ value }}" placeholder="请输入搜索关键词" use-action-slot bind:search="onSearch" background="#fff">
        <view slot="action" bind:tap="onSearch">搜索</view>
      </van-search>
    </view>
  </view>
  <view class='f1 overhidden' >
    <scroll-view scroll-y class='cm_scroll_y'>
      <van-cell-group>
        <view class="">
          <block wx:for="{{list}}" wx:key="index">
            <navigator url="../facilityDetail/facilityDetail">
              <facilityItem item="{{item}}"></facilityItem>
            </navigator>
          </block>
           <moreReminder loading="{{loading}}" nomore="{{nomore}}"></moreReminder>
        </view>
      </van-cell-group>    
    </scroll-view>
  </view>
  <!-- 小工具 -->
  <view class='tip' hover-class='tipHover'>
    <van-icon name="filter-o" size="40rpx" custom-class="tipIcon"/>
    <view class='tipText'>筛选</view>
  </view>
</view>