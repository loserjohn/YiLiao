<!--pages/index/subpages/repairOrder/repairOrder.wxml-->
<!-- 设备保修工单 -->


  <view class='cm_container' id="scrollBox">
    <van-tabs color="#28B8A1" custom-class="tabs" animated="true" swipeable="false" active="{{active}}">
      <van-tab title="故障信息">
        <scroll-view scroll-y style="{{'height:'+height}}">
          <faultMsg></faultMsg>
        </scroll-view>
      </van-tab>
      <van-tab title="更换配件"> 
        <view class="red" style="{{'height:'+height}}">
          <swichAccessory winheight="{{height}}"  ></swichAccessory>
        </view>      
        
      </van-tab>
      <van-tab title="完成维修">
        <scroll-view scroll-y style="{{'height:'+height}}">
            <complete></complete>  
        </scroll-view>
      </van-tab>
    </van-tabs>
  </view>
<van-dialog id="van-dialog" />