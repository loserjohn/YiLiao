<!--pages/components/orderItem/orderItem.wxml-->
<wxs src="../../statusFilter.wxs" module="statusFilter" />
<van-card title="{{item.title}}" thumb="{{thumb}}"  custom-class="orderItem" lazy-load>
  <view slot="tags"> 
    <van-tag   color="{{statusFilter.status(item.DEVICE_STATUS,'color')}}"  >{{statusFilter.status(item.DEVICE_STATUS,'text')}}</van-tag>
  </view>

  <view slot="desc">
    <view class='orderDesc'>报修编号：{{item.REPAIRS_CODE}}</view>
    <view class='orderDesc'>设备编号：{{item.DEVICE_NUM}}</view>
    <view class='orderDesc'>报修时间：{{item.DEVICE_CRTATE_DATE}}</view>
  </view>
</van-card>