<!--pages/components/accessoryItem/accessoryItem.wxml-->
<!-- 备件item -->

<!--pages/components/orderItem/orderItem.wxml-->

<van-card title="{{item.PART_NAME}}" thumb="{{item.thumb?item.thumb:'/static/img/noPic.jpg'}}" price="{{dosagabled?'使用数量:':''}}" currency='' custom-class="orderItem" lazy-load num="{{dosagabled?'item.num':''}}">
  <view slot="desc">
    <view class='orderDesc'>备件编号：{{item.PART_NO}}</view>
    <view class='orderDesc'>规格型号{{item.PART_TYPE}}</view>  
  </view>
  <view slot="tags">
    <van-tag type="danger" custom-class="tags">{{'￥'+item.PART_PRICE}}</van-tag>
  </view>
  <view slot="footer" >
    <van-button  type="primary" size="mini" wx:if="{{choosabled}}" catchtap="choose">选用备件</van-button>  
    <van-button plain type="danger" size="mini" wx:if="{{delectabled}}" catchtap="delect">删除备件</van-button>
  </view>
</van-card>

