/* pages/components/facilityMsg/facilityMsg.wxss */
.cm_btn {
  background: #28b8a1 !important;
  border-color: #28b8a1 !important;
  vertical-align: middle
}
.scroll_view{
  width: 100%;
  height:200rpx;
  /* background: red; */
  box-sizing: border-box;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  white-space: nowrap
}
.prePics{
  width: 160rpx;
  height: 160rpx;
  margin: 0 10rpx;
  display: inline-block;
  border: 1rpx solid #eee;
  overflow: hidden;
  background: #f3f3f3
}
.prePicsImg{
  width: 100%;
  height:100%
}

.tip{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #28b8a1;
  color: #fff;
  text-align: center;
  position: fixed;
  right: 60rpx;
  bottom: 60rpx;
  z-index: 100
}
.tipIcon{
  /* background: red; */
  margin-top: 16rpx;
  color: #fff
}
.tipText{
  font-size: 24rpx;
  line-height: 20rpx
}
.tipHover{
  background: #35ceb4;
  box-shadow: 0 0 8rpx #28b8a1;
}
.modal{
  width: 80%;
  height: 100%
}